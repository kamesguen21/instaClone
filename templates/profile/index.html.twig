{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="container mt-5 ">
        <div class="row">
            <div class="col">
                <img src="{{ asset('build/user-avatar.svg') }}" alt="logo" class="register-logo">
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
            <div class="col">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <h1> {{ user.userName }}</h1>
                        </div>
                        <div class="col">
                            <button class="btn btn-secondary">Edit Profile</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ user.UserPhotos|length }} posts
                        </div>
                        <div class="col">
                            {{ user.followers|length }} followers
                        </div>
                        <div class="col">
                            {{ user.followings|length }} following
                        </div>

                    </div>
                    <div class="row">
                        <p>{{ user.bio }} </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">

            </div>

        </div>
    </div>
{% endblock %}
